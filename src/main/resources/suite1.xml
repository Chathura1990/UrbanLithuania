<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="All_Verification_Tests">
    <parameter name = "browser" value = "CHROME"/>
    <listeners>
        <listener class-name="applicationFiles.framework.listener.TestNameListener" />
    </listeners>

    <test name="Parking calculator positive Tests">
        <classes>
            <class name="applicationFiles.testFiles.ParkingCalcPositiveTests"/>
        </classes>
    </test><!-- Test 1-->

    <test name="Parking calculator negative Tests">
        <classes>
            <class name="applicationFiles.testFiles.ParkingCalcNegativeTests"/>
        </classes>
    </test><!-- Test 2-->

    <test name="Parking calculator verification Tests">
        <classes>
            <class name="applicationFiles.testFiles.ParkingCalcVerificationTests"/>
        </classes>
    </test><!-- Test 3-->

</suite><!-- Suite 1 -->
